	Discord = {
	   Enabled = true,
	   Invite = "8ryQQAftc3", -- The Discord invite code, do not include discord.gg/
	   RememberJoins = false -- Set this to false to make them join the discord every time they load it up
	},
	KeySystem = false, -- Set this to true to use our key system
	KeySettings = {
	   Title = "WaterMelonHub Key",
	   Subtitle = "Key System",
	   Note = "Join the discord (https://discord.gg/8ryQQAftc3)",
	   FileName = "",
	   SaveKey = false,
	   GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
	   Key = "Watermelon"
	}
 })

local Tab = Window:CreateTab("Script Loader", 4483362458) -- Title, Image


local Label = Tab:CreateLabel("Script is Loading Please Wait.")

